generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expense {
  id          Int       @id @default(autoincrement())
  description String
  amount      Decimal
  date        DateTime
  clerkUserId String?    @unique
  user        ClerkUser? @relation(fields: [clerkUserId], references: [id])
}

model ClerkUser {
  id       String    @id
  expenses Expense[]
}
